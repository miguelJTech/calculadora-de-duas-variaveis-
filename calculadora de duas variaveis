x = int(input('escolha um valor x   '))
y = int(input('escolha um valor y   '))
escolha = 2
while not escolha == 6 :
    escolha = int(input('''escolha
    1 - soma dos valores escolhidos 
    2 -subtração dos valores escolhidos 
    3 -qual dos numeros é maior 
    4 - multiplicação entre os valores 
    5 -  digitar novos valoree
    6 -encerrar o programa '''))
    if escolha == 1 :
        soma = x + y
        print ( 'a soma de {} com {} é {}'.format(x,y,soma))
    elif escolha == 2 :
        sub = x - y
        print ( 'a subtração de {} por {} é igual a {}'.format(x,y,sub) )
    elif escolha == 3 :
        if x > y :
            print('x é maior que y, pois {} é maior que {}'.format(x,y))
        else:
            print('y é maior que y, pois {} é maior que {}'.format(y,x))
    elif escolha == 4:
        produto= x*y
        print('o produto entre {} e {} é igual a {}'.format(x,y,produto))

    elif escolha  == 5 :
        x = int(input('escolha um novo valor para x '))
        y = int(input('escolha um novo valor para y '))
print ('programa encerrado')
